<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".primera_vista">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#FFFFFF"
        android:padding="16dp">

        <TextView
            android:id="@+id/labelBienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido a Agendify! \n Para comenzar registrate con nosotros"
            android:textSize="22sp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="18dp"
            android:textColor="#000000"
            android:gravity="center"/>
    <!-- Logo de la app -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/logo_agendify"
        android:contentDescription="App Logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"/>

    <!-- Label para usuarios -->
    <TextView
        android:id="@+id/labelUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Eres un usuario?"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:gravity="center"/>

    <!-- Botón para usuarios normales -->
    <Button
        android:id="@+id/btnUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#8e3d86"
        android:textColor="#FFFFFF"
        android:text="Registrarse como usuario"
        android:layout_marginBottom="24dp"/>

    <!-- Label para negocios -->
    <TextView
        android:id="@+id/labelNegocio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Eres un negocio?"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:gravity="center"/>

    <!-- Botón para registro de negocios -->
    <Button
        android:id="@+id/btnNegocio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#8c52ff"
        android:textColor="#FFFFFF"
        android:text="Registrarse como negocio"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>