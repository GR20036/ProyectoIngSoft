<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Negocio">

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/loginNegocioLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50sp"
            android:text="Iniciar Sesión como negocio"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="180sp"
            android:layout_height="180sp"
            android:layout_marginBottom="30sp"
            android:src="@drawable/logo_agendify" />

        <EditText
            android:id="@+id/emailNegocioEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/passwordNegocioEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50sp"
            android:hint="Contraseña"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/loginNegocioButton"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_personalizado"
            android:text="Iniciar sesión"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- ImageButton para desplegar el menú -->
    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:background="#00FFFFFF"
        android:contentDescription="Menú desplegable"
        android:src="@drawable/ic_menu"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
